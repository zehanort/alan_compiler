stringstats() : proc
str : byte[10];
{
	writeString("Give a string up to 8 letters to compute length: ");
	readString(10, str);
	writeString("You wrote: \"");
	writeString(str);
	writeString("\"\n");
	writeString("What you wrote has length: ");
	writeInteger(strlen(str));
	writeChar('\n');
	if (strcmp(str, "hello!") == 0) writeString("...hello there, too!\n");
	return;
}
